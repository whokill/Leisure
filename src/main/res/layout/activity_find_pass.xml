<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="找 回 密 码"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:text="找回密码链接将会发送到你注册的邮箱"
        android:textColor="#000000" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="用户名"
            android:id="@+id/et_findpass_username"
            android:layout_marginRight="20px"
            android:layout_marginLeft="20px"/>
    </android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="10dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入验证"
            android:lines="1"
            android:inputType="text"
            android:singleLine="true"
            android:layout_weight="1"
            android:id="@+id/et_findpass_code"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/iv_findpass_code"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="看不清？换一张"
        android:layout_marginRight="20px"
        android:id="@+id/tv_findpass_change_code"
        android:layout_gravity="right"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:text="完成"
        android:id="@+id/btn_findpass_complete"
        android:textColor="#ffffff"
        android:background="@color/title"/>
</LinearLayout>
