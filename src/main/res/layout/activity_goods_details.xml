<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/title"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@mipmap/left"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/iv_goods_details_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="商品详情"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:paddingRight="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/tv_goods_pic"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="商品价格"
            android:id="@+id/tv_goods_details_price"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:textColor="#ff0000"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="商品标题"
            android:id="@+id/tv_goods_details_title"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="商品详情"
            android:id="@+id/tv_goods_details"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textColor="#000000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="加入购物车"
            android:textColor="#ffffff"
            android:background="@drawable/goods_details_shopping_car_button"
            android:id="@+id/btn_add_shoppingcar"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="bottom"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="立即购买"
            android:textColor="#ffffff"
            android:background="@drawable/goods_details_buy_now"
            android:id="@+id/btn_shopping"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="bottom"/>
    </LinearLayout>
</LinearLayout>